<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />

    <style>

        nav-item {
            color: white !important
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg" style="background-color: #8c5480;color:white">
        <div class="container-fluid">
            <a class="navbar-brand fw-light" asp-controller="Students" asp-action="GetStudentList" style="color:white">
                Student Manager EF
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" style="color:white" aria-current="page" asp-controller="Students" asp-action="GetStudentListManual">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:white" aria-current="page" asp-controller="Students" asp-action="CreateStudent">Add</a>
                    </li>

                </ul>


                <a asp-controller="Students" class="btn btn-outline-light " asp-action="LogOut">Log Out  &nbsp<i class=" bi-box-arrow-right"></i></a>

            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" style="max-height:fit-content">
            @RenderBody()
        </main>
    </div>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", false)
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
</body>
</html>
